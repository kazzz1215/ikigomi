<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            
        </section>
        <p><%= @user.profile %></p>
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.projects.any? %>
            <h3>Projects (<%=@user.projects.count %>)</h3>
            <ol class="projects">
                <%= render @projects %>
            </ol>
        <% end %>
    </div>
</div>