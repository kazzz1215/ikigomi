<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <p><%= @user.area %></p>
        </section>
        <p><%= @user.profile %></p>
    </aside>
    <div class="col-md-8">
        <% if @user.projects.any? %>
            <h3>Projects (<%=@user.projects.count %>)</h3>
            <ol class="projects">
                <%= render @projects %>
            </ol>
        <% end %>
    </div>
</div>