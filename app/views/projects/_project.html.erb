<li id="project-<%= project.id %>">
    <% if project.user.image? %>
    <div class = "gravatar">
        <%= link_to image_tag(project.user.image.thumb.url, :size => "50x50"), project.user %>
    </div>
    <% else %>
        <%= link_to gravatar_for(project.user, size: 50), project.user %>
    <% end %>
    <span class="user"><%= link_to project.user.name, project.user %></span>
    <span class="title"><%= link_to project.title, project_path(project.id) %></span>
    <span class="timestamp">
        Created <%= time_ago_in_words(project.created_at) %> ago.
        <% if current_user == project.user %>
            <%= link_to "delete", project, method: :delete,
                                           data: { confirm: "You sure?" } %>
        <% end %>
    </span>
</li>