<li id="project-<%= project.id %>">
    <% if project.user.image? %>
    <div class = "gravatar">
        <%= link_to image_tag(project.user.image.thumb.url, :size => "50x50"), project.user %>
    </div>
    <% else %>
        <%= link_to gravatar_for(project.user, size: 50), project.user %>
    <% end %>
    <span class="user"><%= link_to project.user.name, project.user %></span>
    <span class="title">
        <%= link_to project.title, project_path(project.id) %>
        <% if project.done == true %>
            <p class="label label-primary">完了</p>
        <% else %>
            <p class="label label-danger">対応中</p>
        <% end %>
    </span>
    <% if project.image? %>
        <%= image_tag project.image.url %>
    <% end %>
    <span class="timestamp">
        Updated <%= time_ago_in_words(project.updated_at) %> ago.
    </span>
</li>