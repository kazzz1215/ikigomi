<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
            <% if @user.image? %>
            <div class = "gravatar">
                <%= image_tag @user.image.thumb.url %>
            </div>
            <% else %>
                <%= gravatar_for @user %>
            <% end %>
                <%= @user.name %>
            </h1>
            <p><%= @user.area %></p>
        </section>
        <p><%= @user.profile %></p>
    </aside>
    <div class="col-md-8">
        
        <h1><%= @project.title %></h1>
        
        <% if current_user == @user %>
        <h2><%= link_to "プロジェクト情報を更新する", edit_project_path(@project) %></h2>
        <% end %>
        
        <div class = "image-center">
        <% if @project.image? %>
            <%= image_tag @project.image.url %>
        <% end %>
        </div>
        
        <p>
        <% if @project.content? %>
            <%= @project.content %>
        <% end %>
        </p>
        
        <ul>
            <% @project.tasks.each do |task| %>
            <li>
                <%= task.title %></li>
                <% if current_user == @user %>
                <%= link_to "delete", project_task_path(task.project_id,task.id), method: :delete,
                                       data: { confirm: "You sure?" } %>
                <% end %>
            <% end %>
            <% if current_user == @user %>
            <li>
                <%= form_for [@project, @project.tasks.build] do |f| %>
                <%= f.text_field :title %>
                <%= f.submit %>
                <% end %>
            </li>
            <% end %>
        </ul>
    </div>
</div>